# NightScanPi Environment Configuration Template
# Copy this file to .env and configure with your production values

# =============================================================================
# API Configuration
# =============================================================================

# Main API endpoint for file uploads (REQUIRED for production)
NIGHTSCAN_API_URL=https://api.your-domain.com/upload

# API authentication token (recommended for production)
NIGHTSCAN_API_TOKEN=your-api-token-here

# =============================================================================
# System Configuration
# =============================================================================

# Set to 1 to disable all network uploads (for testing)
NIGHTSCAN_OFFLINE=0

# Log file path (default: nightscan.log)
NIGHTSCAN_LOG=/home/pi/nightscan.log

# Data directory for captures (default: data)
NIGHTSCAN_DATA_DIR=/home/pi/nightscan_data

# =============================================================================
# Hardware Configuration
# =============================================================================

# Force Pi Zero optimizations (auto-detected if not set)
NIGHTSCAN_FORCE_PI_ZERO=false

# SIM module device path (optional, for cellular upload)
NIGHTSCAN_SIM_DEVICE=/dev/ttyUSB0

# SIM module baud rate (default: 115200)
NIGHTSCAN_SIM_BAUDRATE=115200

# =============================================================================
# Time and Location Configuration
# =============================================================================

# GPS coordinates for sunrise/sunset calculations (format: "lat,lon")
NIGHTSCAN_GPS_COORDS=46.9,7.4

# Timezone (default: auto-detected from GPS coords)
NIGHTSCAN_TIMEZONE=Europe/Zurich

# Active hours (format: "start_hour,end_hour" in 24h format)
# Default: sunset to sunrise
NIGHTSCAN_START_HOUR=18
NIGHTSCAN_STOP_HOUR=10

# Minutes offset from sunrise/sunset (default: 30)
NIGHTSCAN_SUN_OFFSET=30

# Sun times cache file path (default: ~/sun_times.json)
NIGHTSCAN_SUN_FILE=/home/pi/sun_times.json

# =============================================================================
# Audio Configuration  
# =============================================================================

# Audio detection threshold (0.0-1.0, default: 0.5)
NIGHTSCAN_AUDIO_THRESHOLD=0.5

# Audio recording duration in seconds (default: 8)
NIGHTSCAN_AUDIO_DURATION=8

# Audio sample rate (default: 22050)
NIGHTSCAN_AUDIO_SAMPLE_RATE=22050

# =============================================================================
# Camera Configuration
# =============================================================================

# Camera resolution (format: "width,height", default: 1920,1080)
NIGHTSCAN_CAMERA_RESOLUTION=1920,1080

# Camera ISO setting (default: auto)
NIGHTSCAN_CAMERA_ISO=800

# Camera exposure time in microseconds (default: auto)
NIGHTSCAN_CAMERA_EXPOSURE=auto

# IR LEDs enable (default: true for night mode)
NIGHTSCAN_IR_ENABLED=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum memory usage percentage before cleanup (default: 85)
NIGHTSCAN_MAX_MEMORY_PERCENT=85

# Number of processing threads (default: auto-detected)
NIGHTSCAN_THREADS=1

# Enable memory monitoring (default: true on Pi Zero)
NIGHTSCAN_MEMORY_MONITORING=true

# =============================================================================
# Storage Configuration
# =============================================================================

# Maximum SD card usage percentage before cleanup (default: 70)
NIGHTSCAN_MAX_STORAGE_PERCENT=70

# Keep original .wav files after spectrogram generation (default: false)
NIGHTSCAN_KEEP_WAV_FILES=false

# Spectrogram format (npy, png, both - default: npy)
NIGHTSCAN_SPECTROGRAM_FORMAT=npy

# =============================================================================
# Network Configuration
# =============================================================================

# WiFi scan timeout in seconds (default: 30)
NIGHTSCAN_WIFI_SCAN_TIMEOUT=30

# Upload retry attempts (default: 3)
NIGHTSCAN_UPLOAD_RETRIES=3

# Upload timeout in seconds (default: 60)
NIGHTSCAN_UPLOAD_TIMEOUT=60

# =============================================================================
# Development/Debug Configuration
# =============================================================================

# Enable debug logging (default: false)
NIGHTSCAN_DEBUG=false

# Enable camera debug mode (default: false)  
NIGHTSCAN_CAMERA_DEBUG=false

# Enable audio debug mode (default: false)
NIGHTSCAN_AUDIO_DEBUG=false

# Skip hardware initialization (for testing, default: false)
NIGHTSCAN_SKIP_HARDWARE=false