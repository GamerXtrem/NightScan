{
  "expo": {
    "name": "NightScan",
    "slug": "nightscan",
    "version": "0.2.0",
    "platforms": ["ios", "android"],
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0F1420"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nightscan.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "NightScan utilise votre localisation pour configurer automatiquement la position géographique de votre Pi.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "NightScan utilise votre localisation pour configurer automatiquement la position géographique de votre Pi."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0F1420"
      },
      "package": "com.nightscan.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "main": "./App.js"
  }
}